        <input id ="datetime1" asp-for="CheckOutDate" type="datetime-local" class="form-control" />
    </div>
 
    <div class="form-group mt-5">
        <input type="submit" value="Check-Out İşlemini Tamamla" id="checkoutBtn" class="btn btn-success" />
    </div>

</form>
